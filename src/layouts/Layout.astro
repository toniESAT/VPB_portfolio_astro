---
interface Props {
	title: string;
}

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions, fade } from "astro:transitions";

const { title } = Astro.props;

import "../styles/normalize.css";
import "@fontsource-variable/open-sans";
---

<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>
		<meta charset="UTF-8" />
		<meta name="description" content="" />
		<meta name="viewport" content="initial-scale=1.0, width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<ViewTransitions />
	</head>
	<body>
		<Header />
		<main id="content">
			<slot />
		</main>
		<Footer />

		<style is:global>
			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}

			html,
			body {
				scroll-behavior: smooth;
				width: 100vw;
				height: 100svh;
				overflow-x: hidden;
				overflow-y: scroll;
			}

			main {
				position: relative;
				display: flex;
				flex-flow: column nowrap;
				justify-content: center;
			}

			body {
				font-family: "Open Sans Variable";
			}

			a {
				text-decoration: none;
				color: inherit;
			}

			img {
				margin: 0;
				line-height: 0;
			}
		</style>

		<script is:inline>
			function expand_content() {
				let footer_height = document.getElementById("footer").offsetHeight;
				let header_height = document.getElementById("header").offsetHeight;
				let main = document.getElementById("content");
				main.style.minHeight = `calc(100vh - ${footer_height + header_height}px)`;

				document.body.addEventListener("scroll", addSticky);
			}

			expand_content();
			document.addEventListener("astro:after-swap", expand_content);
			document.addEventListener("resize", expand_content);

			function addSticky() {
				const navbar = document.getElementById("header");
				const sticky = 80;

				if (document.body.scrollTop >= sticky) {
					navbar.classList.add("sticky");
				} else {
					navbar.classList.remove("sticky");
				}
			}
		</script>
	</body>
</html>
