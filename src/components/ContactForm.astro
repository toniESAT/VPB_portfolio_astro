<form class="contact-form">
  <div class="form-group left-side">
    <!-- <div class="name-mail"> -->
    <div id="name" class="input-wrapper">
      <label for="name">Name</label>
      <input
        class="input-textbox"
        pattern="[a-zA-Z0-9]{8,}"
        required
        type="text"
        placeholder="YOUR NAME"
      />
    </div>
    <div id="email" class="input-wrapper">
      <label for="email">Email</label>
      <input
        class="input-textbox"
        pattern="[A-Za-z0-9._+-]+@[A-Za-z0-9 -]+\.[a-z]{2,}"
        required
        type="email"
        placeholder="YOUR EMAIL"
      />
    </div>
    <button>SEND YOUR MESSAGE</button>
    <!-- </div> -->
  </div>

  <div class="form-group right-side">
    <div id="text" class="input-wrapper">
      <label for="subject"></label>
      <textarea
        class="input-textbox"
        id="subject"
        name="subject"
        placeholder="WHAT'S ON YOUR MIND?"
        style="height:200px"></textarea>
    </div>
  </div>
</form>

<style>
  :root {
    --border-thickness: 2px;
  }

  .contact-form {
    display: flex;
    justify-items: space-around;
    margin: 0 auto;
    margin-bottom: 2rem;
    padding: 2rem;
    height: 20rem;
    max-width: 60%;
    min-width: 30rem;
    background: black;
    border-radius: 20px;
    color: white;
    gap: 2rem;
    box-shadow: 4px 4px 7.5px 2px grey;
  }

  .form-group {
    position: relative;
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
    gap: 0.5rem;
    position: relative;
  }

  .left-side {
    flex-grow: 1;
    flex-shrink: 1;
  }
  .right-side {
    flex-grow: 3;
    flex-shrink: 1;
  }

  .input-textbox {
    background-color: black;
    color: white;
    margin: 0;
    width: 100%;
    height: 100%;
    border: none;
    resize: none;
    pointer-events: all;
  }

  .input-textbox::placeholder {
    white-space: pre-line;
  }

  .input-textbox:focus {
    outline: none;
  }

  .input-wrapper {
    position: relative;
    padding: 0.4rem;
    border-radius: 5px;
    pointer-events: none;
    border: 2px solid white;
  }

  .input-wrapper[id="name"],
  [id="email"] {
    height: 3rem;
    /* width: 50%; */
  }

  button {
    font-weight: 500;
    width: 100%;
    height: 3rem;
    background: white;
    border: none;
    border-radius: 5px;
    outline:none;
  }

  .input-wrapper[id="text"] {
    height: 100%;
    /* width: 50%; */
  }
  .input-wrapper::before {
    content: "";
    display: block;
    position: absolute;
    top: calc(-1 * var(--border-thickness));
    left: calc(-1 * var(--border-thickness));
    bottom: calc(-1 * var(--border-thickness));
    right: calc(-1 * var(--border-thickness));
    padding: 0;
    margin: 0;
    z-index: 1000;
    border-radius: 5px;
    box-shadow: inset 0px 0px 5px 4px white;
    opacity: 0;
    transition: opacity 400ms ease;
  }

  .input-wrapper:focus-within::before {
    opacity: 1;
  }

  .name-mail {
    display: flex;
    justify-items: space-between;
    gap: 1rem;
  }

  /* Hide labels */
  label {
    margin: 0;
    padding: 0;
    width: 0;
    height: 0;
    clip: rect(1px, 1px, 1px, 1px);
    position: absolute;
  }

  @media (max-width: 1024px) {
		.about {
			flex-direction: column-reverse;
		}
	}
</style>
