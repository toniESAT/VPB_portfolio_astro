---
import NavButton from "../components/NavButton.astro";
import NavDropdown from "../components/NavDropdown.astro";
---

<header>
  <div class="logo-container">
    <a href="">
      <div class="logo">VÍCTOR PÉREZ BROTONS</div>
    </a>
  </div>
  <nav id="navbar" class="nav-bar">
    <ul class="nav-list">
      <NavButton href="">HOME</NavButton>
      <NavButton href="">CONCEPT</NavButton>
      <NavButton href="">ILLUSTRATION</NavButton>
      <NavDropdown name="PROJECTS">
        <NavButton href="">SKY IS DEAD</NavButton>
        <NavButton href="">ETHERNA</NavButton>
        <NavButton href="">ANIMALS A-Z</NavButton>
      </NavDropdown>
      <NavButton href="">ABOUT ME</NavButton>
    </ul>
  </nav>
</header>

<script>
  window.onscroll = function () {
    addSticky();
  };

  var navbar = document.getElementById("navbar")!;

  var sticky = navbar.offsetTop;

  function addSticky() {
    if (window.scrollY >= sticky) {
      navbar.classList.add("sticky");
    } else {
      navbar.classList.remove("sticky");
    }
  }
</script>

<style>
  header {
    margin: 0;
    font-family: MenuFont;
    display: block;
    background-color: black;
    color: white;
  }

  .logo-container {
    display: flex;
    height: 5rem;
    text-align: center;
    justify-content: center;
    align-items: center;
  }

  .logo {
    font-size: 2rem;
    font-weight: 600;
  }

  .nav-bar {
    background-color: black;
    box-shadow: 0 2px 5px 0 grey;
    clip-path: inset(0px -10px -100vh -10px); /* Remove top shadow */
  }

  .nav-list {
    padding: 0 20%;
    height: auto;
    margin: 0;
    display: flex;
    list-style-type: none;
    justify-content: space-around;
    align-items: center;
  }

  .sticky {
    position: fixed;
    top: 0;
    width: 100%;
  }
</style>
