---
interface Props {
  title: string;
  isproject?: boolean;
}

const { title, isproject = false } = Astro.props;
---

<div class=`nav-item ${isproject ? "project-button" : "" }`>
  {title}
  <div class="underline"></div>
</div>

<style>
  .nav-item {
    margin: 0;
    margin-inline: auto;
    padding: 1rem;
    width: fit-content;
    text-align: center;
    font-weight: 500;
    min-width: 5rem;
  }

  .underline {
    margin: 0;
    width: 0%;
    position: relative;
    bottom: -5px;
    margin-inline: auto;
    border-bottom: 2px solid white;
    transition: width 400ms ease;
  }

  .nav-item:hover .underline {
    width: 100%;
  }

  .selected .underline {
    width: 100%;
  }
</style>
